<h2>Inscribirse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractéres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Nueva contraseña" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmación %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Nueva contraseña" %>
  </div>
<div class="field">
 <%= f.label :Nombre %> <br>
 <%= f.text_field :name, autocomplete: "Nuevo Nombre" %>
</div>
<div class="field">
 <%= f.label :Fono %> <br>
 <%= f.text_field :phone, autocomplete: "Nuevo telefono" %>
</div>
  <div class="actions">
    <%= f.submit "Inscribirse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
